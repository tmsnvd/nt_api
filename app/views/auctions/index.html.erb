<h1>Listing auctions</h1>

<table>
  <thead>
    <tr>
      <th>Start price</th>
      <th>Start date</th>
      <th>Buynow price</th>
      <th>Minimal price</th>
      <th>Listing</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= auction.start_price %></td>
        <td><%= auction.start_date %></td>
        <td><%= auction.buynow_price %></td>
        <td><%= auction.minimal_price %></td>
        <td><%= auction.listing %></td>
        <td><%= auction.user %></td>
        <td><%= link_to 'Show', auction %></td>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Auction', new_auction_path %>
